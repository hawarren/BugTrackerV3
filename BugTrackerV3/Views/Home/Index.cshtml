@using Microsoft.AspNet.Identity
@using BugTrackerV3.Models
@model LoginViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>BugTrackerV3</h1>
    <p class="lead">

        @*TODO: Use a card or modal for the description of the app*@

    </p>


    @if (!Request.IsAuthenticated)
    {

        <p><a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg">Click to Register or Log in</a></p>

            }
            else
            {


        <p class="btn btn-success btn-lg">
            Now that you are logged in,
            <br />check out Projects and Tickets,
            <br /> Using the sidebar on the left
            <br />(Select <i class="fa fa-bars"> Menu </i> to toggle the sidebar)
        </p>
    }

</div>

