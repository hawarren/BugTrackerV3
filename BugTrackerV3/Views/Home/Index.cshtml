@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Warren's Better BugTracker</h1>
    <p class="lead">
        Authored using ASP.NET framework and related technologies <br />
        (including C#, HTML, CSS, JavaScript, Bootstrap and jQuery).
    </p>
    @if (!Request.IsAuthenticated)
    {

        <p><a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">Register and Log in</a></p>
    }
    else

    {

        <p class="btn btn-primary btn-lg">
            Now that you are logged in,
            <br />check out Projects and Tickets,
            <br /> Using the sidebar on the left
            <br />(Select <i class="fa fa-bars"> Menu </i> to toggle the sidebar)
        </p>
    }
</div>

