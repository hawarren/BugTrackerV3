<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@if (Model.AssignedToUserId == User.Identity.GetUserId()
                || Model.OwnerUserId == User.Identity.GetUserId()
                 || Model.Project.PMID == User.Identity.GetUserId()
                 || User.IsInRole("Admin")
                 )
{

<div>
    @using (Html.BeginForm("Create", "TicketComments", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="TicketId" value="@Model.Id" />
        <textarea name="Comment"></textarea>
        <input type="submit" value="Add Comment" />
    }

</div>
}


@foreach (var comment in Model.TicketComments)
{
    <ul>
        <li>
            <h3> Posted by @comment.User.DisplayName at @comment.Created.ToString("MMM. dd, yyyy hh:mmtt") : </h3> 
        
            @comment.Comment
        </li>
    </ul>

}