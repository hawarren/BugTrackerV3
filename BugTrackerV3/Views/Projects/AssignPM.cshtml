@model BugTrackerV3.Models.AdminProjectViewModel

@{
    ViewBag.Title = "Assign Project Manager";
}

<h2>@Model.Project.Name</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        
        @Html.HiddenFor(item => item.Project.Id)
        @Html.HiddenFor(item => item.Project.Name)

        <div class="form-group">
            @Html.LabelFor(item => item.PMUsers, "Project Managers", htmlAttributes: new { @class = "form-control" })
            <div class="col-md-10">
                @Html.DropDownListFor(item => item.SelectedUser, Model.PMUsers, null, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Assign as Project Manager" class="btn btn-default" />
            </div>
        </div>
    </div>
}
