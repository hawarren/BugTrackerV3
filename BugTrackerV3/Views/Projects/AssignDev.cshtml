@model BugTrackerV3.Models.ProjectDEVViewModel

@{
    ViewBag.Title = "Assign Developer";
}

<h2>
    Assign Developers to <u>"@Model.Project.Name"</u>
</h2>
<h3>
    You may select multiple developers, including the developers currently on this project.

</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4><strong>@Model.Project.Name</strong> </h4>
        <hr />

        @Html.HiddenFor(item => item.Project.Name)
        @Html.HiddenFor(item => item.Project.Id)

        <div class="form-group">
            @Html.LabelFor(item => item.DevUsers, "Developers", htmlAttributes: new { @class = "form-control" })
            <div class="col-md-10">
                @Html.ListBoxFor(item => item.SelectedUsers, (MultiSelectList)Model.DevUsers, null)

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
